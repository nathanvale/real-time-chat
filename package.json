{
	"name": "real-time-chat",
	"version": "1.0.0",
	"description": "Real-time multi-user chat application with Socket.IO",
	"type": "module",
	"workspaces": [
		"client",
		"server"
	],
	"scripts": {
		"dev": "cd client && bun run dev & cd server && bun run dev",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"test": "bun test --recursive",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"validate": "bun run lint && bun run typecheck && bun test",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,mts,cts,json}": [
			"biome check --write"
		]
	}
}
